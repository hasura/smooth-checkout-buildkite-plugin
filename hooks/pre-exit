#!/usr/bin/env bash

set -eo pipefail

echo "--- :broom: Cleaning up workspace"
if [ -d "$CLONE_DIR" ]; then
    echo "Removing directory: $CLONE_DIR"
    rm -r "$CLONE_DIR"
    unset "$CLONE_DIR"
    unset "$CLONE_URL"
fi

if [ -z "$(ls -A "$WORKSPACE")" ]; then
  rmdir "$WORKSPACE"
fi
echo "Cleanup completed successfully."
